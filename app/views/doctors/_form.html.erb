<div class="col-md-5">
  <%= form_for(@doctor, html: {role: 'form'}) do |f| %>
    <% if @doctor.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@doctor.errors.count, "error") %> impidieron guardar este doctor</h2>

        <ul>
          <% @doctor.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :dni %>
      <%= f.text_field :dni, class: 'form-control', placeholder: 'Cédula' %>
    </div>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', placeholder: 'Nombre' %>
    </div>
    <div class="form-group">
      <%= f.label :lastname %>
      <%= f.text_field :lastname, class: 'form-control', placeholder: 'Apellidos' %>
    </div>
    <div class="form-group">
      <%= f.label :mobile %>
      <%= f.text_field :mobile, class: 'form-control', placeholder: 'Móvil' %>
    </div>
    <div class="form-group">
      <%= f.label :landline %>
      <%= f.text_field :landline, class: 'form-control', placeholder: 'Fijo' %>
    </div>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email, class: 'form-control', placeholder: 'Correo' %>
    </div>
    <div class="form-group">
      <%= collection_select(:doctor, :clinics, @clinics, :id, :name, {}, {selected: @doctor.clinics, multiple:true, class: 'form-control' } )%>
    </div>
    <%= f.submit class: 'btn btn-default' %>
    <%= link_to 'Back', doctors_path, class: 'btn btn-danger' %>
  <% end %>
</div>
